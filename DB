TRUNCATE article;
TRUNCATE reply;
TRUNCATE `member`;

CREATE TABLE board(
    id INT(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    PRIMARY KEY(id),
    regDate DATETIME NOT NULL,
    updateDate DATETIME NOT NULL,
    `name` CHAR(100) NOT NULL,
    `code` CHAR(100) NOT NULL,
    memberId INT(10) NOT NULL
);

INSERT INTO board
